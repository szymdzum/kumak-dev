---
interface Props {
  date: Date | string;
}

const { date } = Astro.props;
const dateObj = date instanceof Date ? date : new Date(date);
---

<time datetime={dateObj.toISOString()}>
  {
    dateObj.toLocaleDateString("en-GB", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>

<style>
  time {
    font-size: inherit;
  }
</style>
