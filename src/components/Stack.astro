---
export interface Props {
  gap?: 'small' | 'medium' | 'large' | 'xl';
  as?: string;
  class?: string;
}

const { 
  gap = 'medium',
  as: Element = 'div',
  class: className = '',
  ...rest 
} = Astro.props;

const gapClass = `stack-${gap}`;
---

<Element class:list={['stack', gapClass, className]} {...rest}>
  <slot />
</Element>

<style>
  .stack {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* DEBUG: Bright border to see Stack boundaries */
    border: 5px solid lime !important;
    background: rgba(255, 0, 255, 0.3) !important;
    width: 100% !important;
    text-align: center !important;
  }

  .stack-small {
    gap: clamp(0.5rem, 2vw, 1rem);
  }

  .stack-medium {
    gap: clamp(1rem, 3vw, 2rem);
  }

  .stack-large {
    gap: clamp(1.5rem, 4vw, 3rem);
  }

  .stack-xl {
    gap: clamp(2rem, 6vw, 4rem);
  }
</style>