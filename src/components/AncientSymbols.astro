---
/**
 * A component displaying four ancient mystical symbols with interactive hover effects
 */
---

<div class="ancient-symbols">
  <div class="symbol">
    <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
      <circle
        cx="20"
        cy="20"
        r="18"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></circle>
      <path d="M20 2 L20 38" stroke="currentColor" stroke-width="1.5"></path>
      <path d="M2 20 L38 20" stroke="currentColor" stroke-width="1.5"></path>
      <circle
        cx="20"
        cy="20"
        r="5"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></circle>
    </svg>
  </div>
  <div class="symbol">
    <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
      <polygon
        points="20,2 38,20 20,38 2,20"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></polygon>
      <circle
        cx="20"
        cy="20"
        r="8"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></circle>
      <path d="M12 12 L28 28" stroke="currentColor" stroke-width="1.5"></path>
      <path d="M12 28 L28 12" stroke="currentColor" stroke-width="1.5"></path>
    </svg>
  </div>
  <div class="symbol">
    <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
      <circle
        cx="20"
        cy="20"
        r="18"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></circle>
      <path
        d="M20 2 C30 10, 30 30, 20 38"
        stroke="currentColor"
        stroke-width="1.5"
        fill="none"></path>
      <path
        d="M20 2 C10 10, 10 30, 20 38"
        stroke="currentColor"
        stroke-width="1.5"
        fill="none"></path>
      <circle
        cx="20"
        cy="12"
        r="3"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></circle>
      <circle
        cx="20"
        cy="28"
        r="3"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></circle>
    </svg>
  </div>
  <div class="symbol">
    <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
      <rect
        x="5"
        y="5"
        width="30"
        height="30"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        rx="2"></rect>
      <circle
        cx="20"
        cy="20"
        r="10"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></circle>
      <path d="M10 10 L30 30" stroke="currentColor" stroke-width="1.5"></path>
      <path d="M10 30 L30 10" stroke="currentColor" stroke-width="1.5"></path>
    </svg>
  </div>
</div>

<style>
  .ancient-symbols {
    display: flex;
    justify-content: center;
    /* More generous spacing between symbols */
    gap: clamp(2rem, 6vw, 4rem);
    margin-bottom: 2rem;
    width: 100%;
  }

  .symbol {
    /* Fluid symbol sizing */
    width: clamp(2rem, 6cqi, 4rem);
    height: clamp(2rem, 6cqi, 4rem);
    color: rgba(255, 255, 255, 0.8);
    opacity: 0.8;
    transition: all 0.3s ease;
    cursor: pointer;
    filter: drop-shadow(0 0 3px rgba(255, 255, 255, 0.3));
  }

  .symbol:hover {
    color: rgba(255, 255, 255, 1);
    opacity: 1;
    transform: scale(1.1) rotate(5deg);
    filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.5));
  }
</style>
