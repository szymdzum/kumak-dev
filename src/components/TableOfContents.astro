---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
  title: string;
}

const { headings, title } = Astro.props;

const tocHeadings = headings.filter((h) => h.depth === 2);
---

{tocHeadings.length > 0 && (
  <nav data-toc aria-label="Table of contents">
    <div>
      <span>On this page</span>
      <ul>
        <li>
          <a href="#top">{title}</a>
        </li>
        {tocHeadings.map((heading) => (
          <li>
            <a href={`#${heading.slug}`}>{heading.text.replace(/^#\s*/, '')}</a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
)}

<style>
  nav {
    position: absolute;
    top: 0;
    right: 0;
    transform: translateX(calc(100% + var(--space-xl)));
    width: max-content;
    height: 100%;
    font-size: var(--text-xs);
  }

  div {
    position: sticky;
    top: var(--space-xl);
  }

  span {
    display: block;
    font-family: var(--font-family-display);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-muted);
    margin-bottom: var(--space-xs);
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    padding: var(--space-3xs) 0;
    border-left: var(--border-width-thick) solid var(--color-border);
    padding-left: var(--space-sm);
  }

  li:hover {
    border-left-color: var(--color-primary);
  }

  a {
    color: var(--color-text-muted);
    text-decoration: none;
    line-height: var(--line-height-snug);
    display: block;
  }

  a:hover {
    color: var(--color-primary);
  }

  li:has(a.active) {
    border-left-color: var(--color-primary);
  }

  a.active {
    color: var(--color-primary);
  }

  @media (max-width: 1400px) {
    nav {
      display: none;
    }
  }
</style>

<script src="../utils/toc.ts"></script>
