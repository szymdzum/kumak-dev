---
interface Props {
  size?: number;
  class?: string;
}

const { size = 20, class: className } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="currentColor"
  class={className}
  aria-hidden="true"
>
  <!-- Top -->
  <rect x="9" y="3" width="6" height="6" rx="1.5" opacity="0.6" />
  <!-- Left -->
  <rect x="3" y="9" width="6" height="6" rx="1.5" opacity="0.8" />
  <!-- Right -->
  <rect x="15" y="9" width="6" height="6" rx="1.5" opacity="0.7" />
  <!-- Bottom -->
  <rect x="9" y="15" width="6" height="6" rx="1.5" />
</svg>
