---
interface Props {
  size?: number;
  class?: string;
}

const { size, class: className } = Astro.props;
const style = size ? `width: ${size}px; height: ${size}px;` : undefined;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="currentColor"
  class={className}
  style={style}
  aria-hidden="true"
>
  <!-- Top -->
  <rect x="8" y="1" width="8" height="8" rx="2" opacity="0.6" />
  <!-- Left -->
  <rect x="1" y="8" width="8" height="8" rx="2" opacity="0.8" />
  <!-- Right -->
  <rect x="15" y="8" width="8" height="8" rx="2" opacity="0.7" />
  <!-- Bottom -->
  <rect x="8" y="15" width="8" height="8" rx="2" />
</svg>
