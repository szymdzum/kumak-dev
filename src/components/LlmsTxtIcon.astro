---
interface Props {
  size?: number;
  class?: string;
}

const { size = 24, class: className } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="-3 0 30 27"
  fill="currentColor"
  class={className}
  aria-hidden="true"
>
  <!-- Top -->
  <rect x="8" y="1" width="8" height="8" rx="2" opacity="0.6" />
  <!-- Left -->
  <rect x="1" y="8" width="8" height="8" rx="2" opacity="0.8" />
  <!-- Right -->
  <rect x="15" y="8" width="8" height="8" rx="2" opacity="0.7" />
  <!-- Bottom -->
  <rect x="8" y="15" width="8" height="8" rx="2" />
</svg>
