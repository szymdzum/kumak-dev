---
// src/components/SiteFooter.astro
// import Github from "lucide-react/icons/github";
// import Twitter from "lucide-react/icons/twitter";
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <p>Built with Astro and CSS</p>
    </div>
    <div class="social-links">
      <a href="https://github.com/kumakk" target="_blank" rel="noreferrer">
        Github
        <span class="sr-only">GitHub</span>
      </a>
      <a href="https://twitter.com/kumakk_" target="_blank" rel="noreferrer">
        Twitter
        <span class="sr-only">Twitter</span>
      </a>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    border-top: 1px solid rgba(var(--border-rgb), 0.4);
    background-color: var(--color-background);
  }

  .container {
    max-width: var(--container-width);
    margin-inline: auto;
    padding-inline: var(--s1);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: var(--s1);
    padding-block: var(--s2);
  }


  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--s1);
    padding-inline: var(--s2);
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: var(--s1);
  }

  .social-links a {
    color: var(--color-muted);
    transition: color 0.2s ease;
  }

  .social-links a:hover {
    color: var(--color-foreground);
  }

  .social-links a :global(svg) {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>
