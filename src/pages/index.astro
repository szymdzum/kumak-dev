---
import Hero from "@components/Hero.astro";
import BlogPostCard from "@components/BlogPostCard.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import SchemaOrg from "@components/SchemaOrg.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<BaseLayout
  title="The Null Hypothesis - Software Engineering & Digital Philosophy"
  description="A space where decades of code meet moments of clarity"
>
  <SchemaOrg type="WebSite" slot="head" />
  <Hero />

  <section class="posts">
    <h2><span class="prompt">Recent Posts</span></h2>
    <div class="posts-list">
      {posts.map((post: CollectionEntry<"blog">) => (
        <BlogPostCard post={post} />
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .posts {
    margin-top: 0;
  }

  .posts h2 {
    font-family: var(--font-family-display);
    font-size: var(--text-base);
    font-weight: var(--font-weight-bold);
    letter-spacing: var(--letter-spacing-tighter);
    margin-bottom: var(--space-lg);
  }

  .posts h2 .prompt {
    color: var(--color-primary);
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }
</style>
